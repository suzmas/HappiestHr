<%= form_tag(events_path, method: 'get', id: 'search-form') do %>
<div class="input-group">
  <%= text_field_tag :search, params[:search], class: 'form-control main-search', id: "srch-term", placeholder: "|" %>
  <div class="input-group-btn">
  <%= button_tag(type: 'submit', class: "btn btn-default search-btn") do %>
    <span class="glyphicon glyphicon-search"></span>
  <% end %>
</div>
</div>
<% end %>
