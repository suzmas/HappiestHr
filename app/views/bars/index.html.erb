          <tr>
            <th>Name</th>
            <th>Location</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @bars.each do |bar| %>
            <tr>
              <td><%= link_to bar.name, bar, class: 'bar-link' %></td>
              <td><%= "#{bar.street}, #{bar.city} #{bar.zip}" %></td>

              <td class="table-btn"><%= link_to 'View', bar, class: 'btn btn-default' %></td>

              <!-- <% if bar.user == current_user %>
