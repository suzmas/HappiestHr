              <% else %>
                <td></td>
                <td></td>
              <% end %> -->
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'New Bar', new_bar_path, class: 'btn btn-primary' %>

    </div>
  </div>
</div>

