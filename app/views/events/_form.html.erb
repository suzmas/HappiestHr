<div class="container container-top">
<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :day %>
    <%= f.text_field :day %>
  </div>

  <div class="field">
    <%= f.label :start %>
    <%= f.time_select :start %>
  </div>

  <div class="field">
    <%= f.label :end %>
    <%= f.time_select :end %>
  </div>

  <div class="field">
    <%= f.label :bar %>
    <%= select(:event, :bar_id, @bars_for_select, {prompt: '- Select One -'}) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
