<h1>Admin</h1>

<h2>Users</h2>
<table>
  <thead>
    <thead>
      <tr>
        <th>Email</th><th>Role</th>
      </tr>
    </thead>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.roles.first.name %></td>
      <td>
        <%= form_tag("/admin/" + user.id.to_s + "?role=admin", method: :PUT) do %>
          <input type="submit" value="Make Admin"/>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<h2>Bars</h2>
<table>
  <thead>
    <thead>
      <tr>
        <th>Address</th><th>User</th>
      </tr>
    </thead>
  </thead>
  <tbody>
  <% @bars.each do |bar| %>
    <tr>
      <td><%= bar.address %></td>
      <td><%= bar.user.email %></td>
      <td>
        <%= link_to 'Edit', edit_bar_path(bar) %>
      </td>
      <td>
        <%= link_to 'Destroy', bar, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
